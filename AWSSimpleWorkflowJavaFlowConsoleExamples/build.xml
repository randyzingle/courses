<?xml version="1.0"?>

<project name="AWSSimpleWorkflowJavaFlowConsoleExamples-1.0" basedir="." default="release" xmlns:ht="happytrails" xmlns:asynchrony="asynchrony" xmlns:ht-aj="ht-aspectj">

	<import file="${happytrails.root}/happytrails.xml"/>
	
	<!-- Define HappierTrails property overrides here -->
	
	<ht:import file="happier-trails.xml"/>
    <ht:import file="ht-aspectj.xml" />
	<ht:import file="asynchrony-decider.xml" />
	
	<!-- Set any property overrides -->
	<!-- For AspectJ -->
		<property name="source.java.vm.version" value="1.6" />
		<property name="target.java.vm.version" value="1.6" />

		<target name="asynchrony-decider-weave">
			<ht-aj:standard-aj-weave>
				<inpath>
					<path path="${classes.dir}" />
				</inpath>
				<aspectpath>
					<path path="${standard.compile.classpath}" />
				</aspectpath>
			</ht-aj:standard-aj-weave>
		</target>

		<target name="compile" depends="asynchrony-decider-compile, asynchrony-decider-weave" />

		<target name="release" depends="build" />
</project>
